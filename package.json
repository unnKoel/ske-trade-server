{
  "name": "ske-trade-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rimraf ./build && babel src --extensions .ts --out-dir build",
    "start:dev": "cross-env NODE_ENV=development MODIFY_JOB=false NEW_TRADE=true UPDATE_TRADE=true nodemon --watch src --exec babel-node src/index.ts --extensions .ts",
    "start": "npm run build && cross-env MODIFY_JOB=false NEW_TRADE=true UPDATE_TRADE=true node build/index.js",
    "initDB": "cross-env TRADE_AMOUNT=40 babel-node src/db/init-db.ts --extensions .ts",
    "prepare": "husky install",
    "lint": "eslint src --ext .ts",
    "prettier": "prettier . --write",
    "check-types": "npx tsc",
    "test": "jest"
  },
  "author": "Addy Zhou",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^7.6.0",
    "core-js": "^3.29.1",
    "mongoose": "^7.0.4",
    "nodejs-base64": "^2.0.0",
    "rxjs": "^7.8.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.3",
    "@babel/node": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.21.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.3",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.55.0",
    "babel-node": "^0.0.1-security",
    "cross-env": "^7.0.3",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.21",
    "prettier": "2.8.5",
    "rimraf": "^4.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "lint-staged": {
    "*": "prettier --check",
    "*.ts": [
      "eslint --ext .ts",
      "bash -c 'npm run check-types'"
    ]
  }
}
